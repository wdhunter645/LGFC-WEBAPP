---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const testPage = await getEntry('pages', 'test');
const { Content } = await testPage.render();
---

<BaseLayout title={testPage.data.title} description={testPage.data.description}>
  <main class="max-w-4xl mx-auto px-4 py-8">
    <div class="prose prose-lg max-w-none">
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
        <h2 class="text-blue-800 text-lg font-semibold mb-2">ðŸ§ª CMS Test Page</h2>
        <p class="text-blue-700 text-sm">
          This page is designed to test the Decap CMS read/write functionality. 
          You can edit this content through the <a href="/admin/" class="underline">admin interface</a>.
        </p>
      </div>
      
      <Content />
      
      <div class="mt-8 p-4 bg-gray-50 rounded-lg border">
        <h3 class="text-gray-800 font-semibold mb-2">Admin Actions</h3>
        <div class="space-y-2">
          <a 
            href="/admin/#/collections/pages/entries/test" 
            class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded text-sm transition-colors"
          >
            Edit this page in CMS
          </a>
          <a 
            href="/admin/" 
            class="inline-block bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded text-sm ml-2 transition-colors"
          >
            Go to CMS Dashboard
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>