  <script type="module">
    import { createClient } from '@supabase/supabase-js';
    const supabase = createClient(import.meta.env.VITE_SUPABASE_URL, import.meta.env.VITE_SUPABASE_ANON_KEY);

    // Vote widget
    const voteEl = document.getElementById('vote');
    const voteStatus = document.getElementById('vote-status');
    function normalize(m) { return { id: m.id, url: m.media_url ?? '/placeholder.svg', alt: m.alt_text ?? m.file_name ?? 'Photo' }; }
    async function getTwoRandomImages() {
      const { data } = await supabase.from('media_files').select('*').eq('media_type','image').order('random').limit(2);
      return (data ?? []).map(normalize);
    }
    async function ensureAuthOrPrompt() {
      const { data } = await supabase.auth.getSession();
      if (!data?.session) { window.location.href = `/login?redirect=${encodeURIComponent('/')}`; return null; }
      return data.session;
    }
    
    async function recordRoundVote(imageId) {
      const session = await ensureAuthOrPrompt(); if (!session) return;
      const { data, error } = await supabase.rpc('record_round_vote', { image_id: imageId });
      if (error) {
        voteStatus.textContent = `Vote failed: ${error.message}`;
      } else if (data) {
        voteStatus.textContent = 'Thanks for voting!';
        loadVote();
      } else {
        voteStatus.textContent = 'You have already voted in this round or image not available.';
      }
    }
    
    async function getCurrentRoundImages() {
      // Get current round info
      const { data: roundData, error: roundError } = await supabase.rpc('get_current_voting_round');
      if (roundError || !roundData?.[0]) {
        console.error('Error getting current round:', roundError);
        return [];
      }
      
      const round = roundData[0];
      
      // Get images for current round
      const { data: imagesData, error: imagesError } = await supabase
        .from('round_images')
        .select(`
          image_id,
          votes_received,
          media_files!inner(id, media_url, alt_text, file_name)
        `)
        .eq('round_id', round.round_id);
      
      if (imagesError) {
        console.error('Error getting round images:', imagesError);
        return [];
      }
      
      return (imagesData || []).map(item => ({
        id: item.image_id,
        url: item.media_files.media_url || '/placeholder.svg',
        alt: item.media_files.alt_text || item.media_files.file_name || 'Photo',
        votes: item.votes_received
      }));
    }
    
    function renderRoundImages(images) {
      voteEl.innerHTML = '';
      for (const img of images) {
        const btn = document.createElement('button');
        btn.className = 'block border-2 border-slate-600 rounded-lg overflow-hidden bg-slate-700 hover:border-red-500 cursor-pointer transition-all duration-200';
        btn.innerHTML = `
          <img src="${img.url}" alt="${img.alt}" class="w-full h-32 object-cover bg-slate-600" loading="lazy" />
          <div class="p-3 text-center">
            <div class="text-white font-medium hover:text-red-400 transition-colors">Vote</div>
            <div class="text-xs text-slate-500">${img.votes} votes</div>
          </div>
        `;
        btn.addEventListener('click', () => recordRoundVote(img.id));
        voteEl.appendChild(btn);
      }
    }
    
    async function loadVote() {
      voteStatus.textContent = 'Loading current round...';
      const images = await getCurrentRoundImages();
      if (images.length < 2) { 
        voteStatus.textContent = 'No active voting round or not enough images available.'; 
        voteEl.innerHTML=''; 
        return; 
      }
      renderRoundImages(images); 
      voteStatus.textContent = '';
    }

    // News feed (top 5 from two sources if available)
    const newsEl = document.getElementById('news');
    async function loadNews() {
      newsEl.innerHTML = '';
      const [qa, posts] = await Promise.all([
        supabase.from('qa_threads').select('id,title,created_at').order('created_at',{ascending:false}).limit(5),
        supabase.from('member_posts').select('id,title,created_at').order('created_at',{ascending:false}).limit(5)
      ]);
      const items = [];
      for (const r of (qa.data||[])) items.push({type:'Q&A', id:r.id, title:r.title, href:'/qa', created_at:r.created_at});
      for (const r of (posts.data||[])) items.push({type:'Post', id:r.id, title:r.title||'Post', href:'#', created_at:r.created_at});
      items.sort((a,b)=> new Date(b.created_at)-new Date(a.created_at));
      for (const it of items.slice(0,5)) {
        const li = document.createElement('li');
        li.className = 'bg-slate-900 rounded-lg p-4 border border-slate-700';
        li.innerHTML = `
          <div class="text-xs text-slate-500 mb-1">${it.type}</div>
          <a class="text-white hover:text-red-400 transition-colors font-medium" href="${it.href}">${it.title}</a>
        `;
        newsEl.appendChild(li);
      }
    }

    // Fan Club Events (club-only)
    const clubList = document.getElementById('club-events');
    const clubStatus = document.getElementById('club-status');
    async function loadClubEvents() {
      const { data, error } = await supabase
        .from('events')
        .select('id,title,start_at,location,link_url,is_club_event')
        .eq('is_club_event', true)
        .order('start_at', { ascending: true })
        .limit(10);
      if (error) { clubStatus.textContent = `Error: ${error.message}`; return; }
      clubList.innerHTML = '';
      for (const e of (data||[])) {
        const li = document.createElement('li');
        li.className = 'bg-slate-900 rounded-lg p-4 border border-slate-700';
        li.innerHTML = `
          <div class="text-white font-semibold mb-1">${e.title}</div>
          <div class="text-slate-400 text-sm mb-2">${new Date(e.start_at).toLocaleString()}${e.location? ' ‚Ä¢ '+e.location:''}</div>
          ${e.link_url? `<a class="text-red-400 hover:text-red-300 text-sm transition-colors" href="${e.link_url}" target="_blank" rel="noreferrer">Details ‚Üí</a>`:''}
        `;
        clubList.appendChild(li);
      }
      clubStatus.textContent = (data||[]).length? '': 'No club events scheduled.';
    }

    loadVote();
    loadNews();
    loadClubEvents();
  </script>
