---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contribute | Lou Gehrig Fan Club" description="Submit links, media, or stories to help build the archive.">
  <section class="max-w-3xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-4">Contribute</h1>
    <p class="text-gray-700 mb-6">Submit links, media, or stories to help build the archive. This form is a placeholder for future integration.</p>

    <form class="space-y-4" onsubmit="event.preventDefault(); alert('Thank you! This will be wired to Supabase soon.');">
      <div>
        <label class="block text-sm font-medium">Title</label>
        <input class="w-full border rounded px-3 py-2" placeholder="A short title" />
      </div>
      <div>
        <label class="block text-sm font-medium">URL</label>
        <input type="url" class="w-full border rounded px-3 py-2" placeholder="https://example.com/article" />
      </div>
      <div>
        <label class="block text-sm font-medium">Notes</label>
        <textarea class="w-full border rounded px-3 py-2" rows="4" placeholder="Optional context or description"></textarea>
      </div>
      <button class="border rounded px-4 py-2 bg-blue-600 text-white">Submit</button>
    </form>
  </section>
</BaseLayout>