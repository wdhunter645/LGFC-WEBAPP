const sections = [
  { name: "Media", emoji: "🗂️" },
  { name: "Users", emoji: "👥" },
  { name: "Assets", emoji: "🖼️" },
  { name: "Reports", emoji: "��" },
  { name: "Posts", emoji: "📝" },
  { name: "Milestones", emoji: "📅" },
  { name: "Settings", emoji: "⚙️" },
  { name: "Auth", emoji: "🔐" }
