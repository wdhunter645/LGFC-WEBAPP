---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// Get all milestones and sort by date
const milestones = await getCollection('milestones');
milestones.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BaseLayout title="Milestones | Lou Gehrig Fan Club">
  <div class="max-w-6xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-8">Lou Gehrig Milestones</h1>
    
    <div class="grid gap-8">
      {milestones.map((milestone) => (
        <article class="bg-white rounded-lg shadow-md overflow-hidden">
          {milestone.data.image && (
            <div class="h-64 bg-gray-200">
              <img 
                src={milestone.data.image} 
                alt={milestone.data.title}
                class="w-full h-full object-cover"
              />
            </div>
          )}
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-2xl font-semibold text-gray-900">
                {milestone.data.title}
              </h2>
              <time class="text-sm text-gray-500">
                {new Date(milestone.data.date).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </div>
            
            <p class="text-gray-600 mb-4">{milestone.data.description}</p>
            
            <div class="prose max-w-none">
              {milestone.render()}
            </div>
            
            {milestone.data.tags && milestone.data.tags.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-2">
                {milestone.data.tags.map((tag) => (
                  <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
    
    {milestones.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">No milestones have been added yet.</p>
      </div>
    )}
  </div>
</BaseLayout>