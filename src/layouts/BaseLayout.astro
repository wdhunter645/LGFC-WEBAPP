---
import "../styles/global.css";
const {
  title = "Lou Gehrig Fan Club",
  description = "Honoring the legacy of Lou Gehrig while raising awareness and support for ALS research.",
  canonical,
  requireAuth = false,
  requireAdmin = false
} = Astro.props;

const currentPath = Astro.url.pathname;
const isDevMode = Astro.url.searchParams.get('dev') === 'true';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {canonical && <link rel="canonical" href={canonical} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>
  <body class="font-sans text-gray-900">
    {(requireAuth || requireAdmin) && !isDevMode && (
      <script type="module">
        import { createClient } from 'https://esm.sh/@supabase/supabase-js@2';
        const SUPABASE_URL = import.meta.env.VITE_SUPABASE_URL;
        const SUPABASE_ANON_KEY = import.meta.env.VITE_SUPABASE_ANON_KEY;
        const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
        (async () => {
          const { data } = await supabase.auth.getSession();
          if (!data?.session) {
            const target = encodeURIComponent(window.location.pathname + window.location.search);
            window.location.href = `/login?redirect=${target}`;
            return;
          }
          if ({requireAdmin}) {
            const { data: members } = await supabase
              .from('members')
              .select('is_admin')
              .eq('user_id', data.session.user.id)
              .limit(1)
              .maybeSingle();
            if (!members?.is_admin) {
              window.location.href = '/';
              return;
            }
          }
        })();
      </script>
    )}

    {isDevMode && (
      <div class="bg-yellow-400 text-black text-center py-2 text-sm font-semibold">
        üõ†Ô∏è DEVELOPMENT MODE - Authentication Bypassed
      </div>
    )}
    <header class="border-b bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60">
      <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between gap-4">
        <a href="/" class="font-semibold">Lou Gehrig Fan Club</a>
        <nav class="flex flex-wrap items-center gap-4 text-sm">
          <a class={`hover:underline ${currentPath === '/' ? 'font-semibold underline' : ''}`} href="/">Home</a>
          <a class={`hover:underline ${currentPath === '/about' ? 'font-semibold underline' : ''}`} href="/about">About</a>
          <a class={`hover:underline ${currentPath === '/milestones' ? 'font-semibold underline' : ''}`} href="/milestones">Milestones</a>
          <a class={`hover:underline ${currentPath === '/news' ? 'font-semibold underline' : ''}`} href="/news">News</a>
          <a class={`hover:underline ${currentPath === '/events' ? 'font-semibold underline' : ''}`} href="/events">Events</a>
          <a class={`hover:underline ${currentPath === '/memorabilia' ? 'font-semibold underline' : ''}`} href="/memorabilia">Memorabilia</a>
          <a class={`hover:underline ${currentPath === '/photos' ? 'font-semibold underline' : ''}`} href="/photos">Photos</a>
          <a class={`hover:underline ${currentPath === '/books' ? 'font-semibold underline' : ''}`} href="/books">Books</a>
          <a class="hover:underline" href="https://www.bonfire.com/store/lou-gehrig-fan-club/" target="_blank" rel="noreferrer">Club Store</a>
          <a class="hover:underline" href="https://linktr.ee/lougehrigfanclub" target="_blank" rel="noreferrer">Contact</a>
          <a class={`hover:underline ${currentPath === '/admin' ? 'font-semibold underline' : ''}`} href="/admin">Admin</a>
          <a class={`hover:underline ${currentPath.startsWith('/admin/') ? 'font-semibold underline' : ''}`} href="/admin/">CMS</a>
          
          <!-- Member-only navigation (hidden by default, shown when logged in) -->
          <div id="member-nav" class={`${isDevMode ? '' : 'hidden'}`}>
            <a class={`hover:underline ${currentPath === '/members/home' ? 'font-semibold underline' : ''}`} href="/members/home">Club Home</a>
            <a class={`hover:underline ${currentPath === '/members/upload-photos' ? 'font-semibold underline' : ''}`} href="/members/upload-photos">Upload Photos</a>
            <a class={`hover:underline ${currentPath === '/members/my-photos' ? 'font-semibold underline' : ''}`} href="/members/my-photos">My Photos</a>
          </div>
          
          <form action="/search" method="get" class="flex items-center gap-1">
            <input name="q" placeholder="Search" class="border rounded px-2 py-1 h-8" />
            <button class="border rounded px-2 py-1 h-8">Go</button>
          </form>
          <a class={`hover:underline ${currentPath === '/login' ? 'font-semibold underline' : ''}`} href="/login">Login</a>
        </nav>
      </div>
    </header>

    {!isDevMode && (
      <script type="module">
        import { createClient } from 'https://esm.sh/@supabase/supabase-js@2';
        const SUPABASE_URL = import.meta.env.VITE_SUPABASE_URL;
        const SUPABASE_ANON_KEY = import.meta.env.VITE_SUPABASE_ANON_KEY;
        const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
        (async () => {
          const { data } = await supabase.auth.getSession();
          const memberNav = document.getElementById('member-nav');
          if (data?.session) {
            memberNav?.classList.remove('hidden');
          }
        })();
      </script>
    )}

    <main class="min-h-screen">
      <slot />
    </main>
    <footer class="border-t bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 py-6 text-sm text-gray-600 flex flex-wrap gap-4 items-center justify-between">
        <p>&copy; {new Date().getFullYear()} Lou Gehrig Fan Club</p>
        <p>"Today I consider myself the luckiest man on the face of the earth."</p>
      </div>
      <div class="max-w-6xl mx-auto px-4 pb-8">
        <nav class="flex flex-wrap gap-6 text-sm text-gray-700">
          <a class="hover:underline" href="/privacy">Privacy Policy</a>
          <a class="hover:underline" href="/terms">Terms of Service</a>
          <a class="hover:underline" href="/community-guidelines">Community Guidelines</a>
        </nav>
      </div>
    </footer>
  </body>
</html>