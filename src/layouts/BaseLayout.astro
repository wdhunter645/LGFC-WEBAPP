---
import "../styles/global.css";
const {
  title = "Lou Gehrig Fan Club",
  description = "Honoring the legacy of Lou Gehrig while raising awareness and support for ALS research.",
  canonical,
  requireAuth = false,
  requireAdmin = false
} = Astro.props;

const currentPath = Astro.url.pathname;
const isDevMode = Astro.url.searchParams.get('dev') === 'true';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {canonical && <link rel="canonical" href={canonical} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script>window.__SUPABASE_URL = window.__SUPABASE_URL || "{process.env.SUPABASE_URL}"; window.__SUPABASE_KEY = window.__SUPABASE_KEY || "{process.env.SUPABASE_PUBLIC_API_KEY}";</script>
  </head>
  <body class="font-sans text-slate-900 bg-white antialiased">
    {(requireAuth || requireAdmin) && !isDevMode && (
      <script type="module">
        import { createClient } from '../lib/supabase-client.js';
        const supabase = createClient();
        (async () => {
          const { data } = await supabase.auth.getSession();
          if (!data?.session) {
            const target = encodeURIComponent(window.location.pathname + window.location.search);
            window.location.href = `/login?redirect=${target}`;
            return;
          }
          const needsAdmin = Boolean({requireAdmin});
          if (needsAdmin) {
            const { data: members } = await supabase
              .from('members')
              .select('is_admin')
              .eq('user_id', data.session.user.id)
              .limit(1)
              .maybeSingle();
            if (!members?.is_admin) {
              window.location.href = '/';
              return;
            }
          }
        })();
      </script>
    )}

    {isDevMode && (
      <div class="bg-yellow-500 text-slate-900 text-center py-2 text-sm font-semibold">
        üõ†Ô∏è DEVELOPMENT MODE - Authentication Bypassed
      </div>
    )}
    <header class="relative z-50 bg-slate-900/95 backdrop-blur-sm border-b border-slate-700/50">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center space-x-3">
            <span class="text-xl font-semibold text-red-500 tracking-wide">Lou Gehrig Fan Club</span>
          </a>
          
          <nav class="flex items-center space-x-8">
            <a class={`text-sm font-medium transition-colors hover:text-red-400 ${currentPath === '/about' ? 'text-red-400' : 'text-slate-300'}`} href="/about">ABOUT</a>
            <a class={`text-sm font-medium transition-colors hover:text-red-400 ${currentPath === '/search' ? 'text-red-400' : 'text-slate-300'}`} href="/search">SEARCH</a>
            <form id="nav-search" action="/search" method="get" class="hidden md:inline-flex items-center ml-2 relative">
              <input id="nav-q" name="q" placeholder="Search..." autocomplete="off" class="bg-slate-800 border border-slate-600 rounded-lg px-3 py-1 text-xs text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" />
              <div id="nav-suggestions" class="absolute top-full left-0 mt-1 w-72 bg-white text-slate-900 border border-slate-200 rounded-lg shadow-lg hidden"></div>
            </form>
            <a class={`text-sm font-medium transition-colors hover:text-red-400 ${currentPath === '/login' ? 'text-red-400' : 'text-slate-300'}`} href="/login">LOGIN</a>
          </nav>
          
          <div class="flex items-center space-x-4">

            <a class={`hover:underline ${currentPath.startsWith('/admin') ? 'font-semibold underline' : ''} hidden`} id="nav-admin" href="/admin">Admin</a>

          </div>
        </div>
      </div>
    </header>

    <script type="module">
      import { createClient } from '../lib/supabase-client.js';
      const supabase = createClient();
      (async () => {
        const { data } = await supabase.auth.getSession();
        const club = document.getElementById('nav-club-home');
        const admin = document.getElementById('nav-admin');
        if (data?.session) {
          club?.classList.remove('hidden');
          const { data: m } = await supabase
            .from('members')
            .select('is_admin')
            .eq('user_id', data.session.user.id)
            .limit(1)
            .maybeSingle();
          if (m?.is_admin) admin?.classList.remove('hidden');
        }
      })();

      // Inline search suggestions
      const form = document.getElementById('nav-search');
      const q = document.getElementById('nav-q');
      const box = document.getElementById('nav-suggestions');
      let lastTerm = '';
      async function suggest(term) {
        if (!term || term.length < 2) { box.classList.add('hidden'); box.innerHTML = ''; return; }
        if (term === lastTerm) return;
        lastTerm = term;
        try {
          const { data, error } = await supabase
            .from('content_items')
            .select('title, source_url')
            .ilike('title', `%${term}%`)
            .order('date_found', { ascending: false })
            .limit(5);
          if (error) throw new Error(error.message);
          if (!data?.length) { box.classList.add('hidden'); box.innerHTML = ''; return; }
          box.innerHTML = data.map(d => `<a class="block px-3 py-2 hover:bg-slate-100 text-sm" href="${d.source_url}" target="_blank" rel="noopener">${d.title}</a>`).join('');
          box.classList.remove('hidden');
        } catch (e) {
          box.classList.add('hidden'); box.innerHTML = '';
        }
      }
      q?.addEventListener('input', () => suggest(q.value.trim()));
      document.addEventListener('click', (ev) => {
        if (!form?.contains(ev.target)) box.classList.add('hidden');
      });
    </script>

    <main class="min-h-screen">
      <slot />
    </main>
    
    <footer class="bg-slate-900 border-t border-slate-700">
      <div class="max-w-7xl mx-auto px-6 py-12">
                <div class="border-t border-slate-700 mt-12 pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
            <div class="text-center md:text-left">
              <p class="text-slate-400 text-sm">&copy; {new Date().getFullYear()} Lou Gehrig Fan Club. Made with ‚ù§Ô∏è for our heroes.</p>
            </div>
            <div class="flex items-center space-x-6">
              <a href="/privacy" class="text-slate-400 hover:text-white text-sm transition-colors">Privacy Policy</a>
              <a href="/terms" class="text-slate-400 hover:text-white text-sm transition-colors">Terms & Conditions</a>
            </div>
          </div>
          <div class="text-center mt-6">
            <p class="text-slate-500 italic font-serif text-lg">
              "Today I consider myself the luckiest man on the face of the earth."
            </p>
            <p class="text-slate-600 text-sm mt-1">‚Äî Lou Gehrig, July 4, 1939</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>