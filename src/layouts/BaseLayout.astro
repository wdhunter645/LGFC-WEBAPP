---
import "../styles/global.css";
const {
  title = "Lou Gehrig Fan Club",
  description = "Honoring the legacy of Lou Gehrig while raising awareness and support for ALS research.",
  canonical,
  requireAuth = false,
  requireAdmin = false
} = Astro.props;

const currentPath = Astro.url.pathname;
const isDevMode = Astro.url.searchParams.get('dev') === 'true';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {canonical && <link rel="canonical" href={canonical} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="font-sans text-white bg-slate-900 antialiased">
    {(requireAuth || requireAdmin) && !isDevMode && (
      <script type="module">
        import { createClient } from '../lib/supabase-client.js';
        const supabase = createClient();
        (async () => {
          const { data } = await supabase.auth.getSession();
          if (!data?.session) {
            const target = encodeURIComponent(window.location.pathname + window.location.search);
            window.location.href = `/login?redirect=${target}`;
            return;
          }
          if ({requireAdmin}) {
            const { data: members } = await supabase
              .from('members')
              .select('is_admin')
              .eq('user_id', data.session.user.id)
              .limit(1)
              .maybeSingle();
            if (!members?.is_admin) {
              window.location.href = '/';
              return;
            }
          }
        })();
      </script>
    )}

    {isDevMode && (
      <div class="bg-yellow-500 text-slate-900 text-center py-2 text-sm font-semibold">
        üõ†Ô∏è DEVELOPMENT MODE - Authentication Bypassed
      </div>
    )}
    <header class="relative z-50 bg-slate-900/95 backdrop-blur-sm border-b border-slate-700/50">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center space-x-3">
            <div class="flex items-center space-x-2">
              <span class="text-red-500 font-bold text-lg">in</span>
              <div class="flex space-x-1">
                <span class="text-red-500 text-xs">‚òÖ</span>
                <span class="text-red-500 text-xs">‚òÖ</span>
                <span class="text-red-500 text-xs">‚òÖ</span>
                <span class="text-red-500 text-xs">‚òÖ</span>
                <span class="text-red-500 text-xs">‚òÖ</span>
              </div>
            </div>
            <span class="text-xl font-semibold text-white tracking-wide">HONOR of</span>
          </a>
          
          <nav class="flex items-center space-x-8">
            <a class={`text-sm font-medium transition-colors hover:text-red-400 ${currentPath === '/' ? 'text-red-400' : 'text-slate-300'}`} href="/">HOME</a>
            <a class={`text-sm font-medium transition-colors hover:text-red-400 ${currentPath === '/about' ? 'text-red-400' : 'text-slate-300'}`} href="/about">ABOUT LOU</a>
            <a class={`text-sm font-medium transition-colors hover:text-red-400 ${currentPath === '/milestones' ? 'text-red-400' : 'text-slate-300'}`} href="/milestones">MILESTONES</a>
            <a class={`text-sm font-medium transition-colors hover:text-red-400 ${currentPath === '/memorabilia' ? 'text-red-400' : 'text-slate-300'}`} href="/memorabilia">MEMORABILIA</a>
            <a class={`text-sm font-medium transition-colors hover:text-red-400 ${currentPath === '/events' ? 'text-red-400' : 'text-slate-300'}`} href="/events">EVENTS</a>
            <a class="text-sm font-medium text-slate-300 hover:text-red-400 transition-colors" href="/community">ALS SUPPORT</a>
          </nav>
          
          <div class="flex items-center space-x-4">
            <form action="/search" method="get" class="hidden md:flex items-center">
              <input name="q" placeholder="Search..." class="bg-slate-800 border border-slate-600 rounded-lg px-4 py-2 text-sm text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" />
            </form>
            <a href="/login" class="inline-flex items-center px-4 py-2 border border-slate-600 rounded-lg text-sm font-medium text-white hover:bg-slate-800 transition-colors">
              SIGN IN
            </a>
            <a class={`hover:underline ${currentPath.startsWith('/admin') ? 'font-semibold underline' : ''} hidden`} id="nav-admin" href="/admin">Admin</a>
            <a class={`hover:underline hidden`} id="nav-club-home" href="/members/home">Club Home</a>
          </div>
        </div>
      </div>
    </header>

    <script type="module">
      import { createClient } from '../lib/supabase-client.js';
      const supabase = createClient();
      (async () => {
        const { data } = await supabase.auth.getSession();
        const club = document.getElementById('nav-club-home');
        const admin = document.getElementById('nav-admin');
        if (data?.session) {
          club?.classList.remove('hidden');
          const { data: m } = await supabase
            .from('members')
            .select('is_admin')
            .eq('user_id', data.session.user.id)
            .limit(1)
            .maybeSingle();
          if (m?.is_admin) admin?.classList.remove('hidden');
        }
      })();
    </script>

    <main class="min-h-screen">
      <slot />
    </main>
    
    <footer class="bg-slate-900 border-t border-slate-700">
      <div class="max-w-7xl mx-auto px-6 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <!-- Brand Section -->
          <div class="md:col-span-1">
            <div class="flex items-center space-x-2 mb-4">
              <span class="text-red-500 font-bold text-lg">in</span>
              <div class="flex space-x-1">
                <span class="text-red-500 text-xs">‚òÖ</span>
                <span class="text-red-500 text-xs">‚òÖ</span>
                <span class="text-red-500 text-xs">‚òÖ</span>
                <span class="text-red-500 text-xs">‚òÖ</span>
                <span class="text-red-500 text-xs">‚òÖ</span>
              </div>
              <span class="text-lg font-semibold text-white">HONOR of</span>
            </div>
            <p class="text-slate-400 text-sm leading-relaxed">
              Dedicated to honoring Lou Gehrig and supporting those affected by ALS with courage, dedication, and sacrifice.
            </p>
          </div>
          
          <!-- Quick Links -->
          <div>
            <h3 class="text-white font-semibold mb-4 tracking-wide">QUICK LINKS</h3>
            <nav class="space-y-3">
              <a href="/" class="block text-slate-400 hover:text-white transition-colors text-sm">Home</a>
              <a href="/about" class="block text-slate-400 hover:text-white transition-colors text-sm">About Lou Gehrig</a>
              <a href="/milestones" class="block text-slate-400 hover:text-white transition-colors text-sm">Career Milestones</a>
              <a href="/memorabilia" class="block text-slate-400 hover:text-white transition-colors text-sm">Memorabilia</a>
            </nav>
          </div>
          
          <!-- Community -->
          <div>
            <h3 class="text-white font-semibold mb-4 tracking-wide">COMMUNITY</h3>
            <nav class="space-y-3">
              <a href="/events" class="block text-slate-400 hover:text-white transition-colors text-sm">Events</a>
              <a href="/news" class="block text-slate-400 hover:text-white transition-colors text-sm">News</a>
              <a href="/qa" class="block text-slate-400 hover:text-white transition-colors text-sm">Q&A Forum</a>
              <a href="/books" class="block text-slate-400 hover:text-white transition-colors text-sm">Books</a>
            </nav>
          </div>
          
          <!-- Support Our Mission -->
          <div>
            <h3 class="text-white font-semibold mb-4 tracking-wide">SUPPORT OUR MISSION</h3>
            <p class="text-slate-400 text-sm mb-4">
              Help us continue honoring Lou Gehrig's legacy and supporting ALS research.
            </p>
            <a href="/community" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg text-sm font-medium hover:bg-red-700 transition-colors">
              DONATE TO ALS RESEARCH
            </a>
          </div>
        </div>
        
        <div class="border-t border-slate-700 mt-12 pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
            <div class="text-center md:text-left">
              <p class="text-slate-400 text-sm">&copy; {new Date().getFullYear()} Lou Gehrig Fan Club. Made with ‚ù§Ô∏è for our heroes.</p>
            </div>
            <div class="flex items-center space-x-6">
              <a href="/privacy" class="text-slate-400 hover:text-white text-sm transition-colors">Privacy Policy</a>
              <a href="/terms" class="text-slate-400 hover:text-white text-sm transition-colors">Terms & Conditions</a>
            </div>
          </div>
          <div class="text-center mt-6">
            <p class="text-slate-500 italic font-serif text-lg">
              "Today I consider myself the luckiest man on the face of the earth."
            </p>
            <p class="text-slate-600 text-sm mt-1">‚Äî Lou Gehrig, July 4, 1939</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

