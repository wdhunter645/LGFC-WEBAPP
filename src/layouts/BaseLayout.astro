---
import "../styles/global.css";
const { title = "Lou Gehrig Fan Club", description = "Honoring the legacy of Lou Gehrig while raising awareness and support for ALS research." } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="font-sans text-gray-900">
    <main class="min-h-screen">
      <slot />
    </main>
  </body>
</html>